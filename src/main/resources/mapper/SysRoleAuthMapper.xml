<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.managersystem.mapper.SysRoleAuthMapper">

    <resultMap type="com.example.managersystem.domain.SysRoleCity" id="SysRoleCityMap">
        <result property="roleId" column="role_id" jdbcType="VARCHAR"/>
        <result property="zipcode" column="zipcode" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询所有-->
    <select id="queryAll" resultMap="SysRoleCityMap">
        select role_id, zipcode
        from sys_role_auth
    </select>

    <!--查询单个-->
    <select id="queryByRoleId" resultMap="SysRoleCityMap">
        select role_id, zipcode
        from sys_role_auth
        where role_id = #{roleId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysRoleCityMap">
        select
        role_id, zipcode
        from sys_role_auth
        <where>
            <if test="roleId != null and roleId != ''">
                and role_id = #{roleId}
            </if>
            <if test="zipcode != null and zipcode != ''">
                and zipcode = #{zipcode}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from sys_role_auth
        <where>
            <if test="roleId != null and roleId != ''">
                and role_id = #{roleId}
            </if>
            <if test="zipcode != null and zipcode != ''">
                and zipcode = #{zipcode}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="" useGeneratedKeys="true">
        insert into sys_role_auth(role_id, zipcode)
        values (#{roleId}, #{zipcode})
    </insert>

    <insert id="insertBatch" keyProperty="" useGeneratedKeys="true">
        insert into sys_role_auth(role_id, zipcode)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.roleId}, #{entity.zipcode})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="" useGeneratedKeys="true">
        insert into sys_role_auth(role_id, zipcode)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.roleId}, #{entity.zipcode})
        </foreach>
        on duplicate key update
        role_id = values(role_id), zipcode = values(zipcode)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sys_role_auth
        <set>
            <if test="roleId != null and roleId != ''">
                role_id = #{roleId},
            </if>
            <if test="zipcode != null and zipcode != ''">
                zipcode = #{zipcode},
            </if>
        </set>
        where role_id = #{sysRoleCity.roleId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from sys_role_auth
        where role_id = #{roleId}
    </delete>

</mapper>
